@using EntityLayer
@model IEnumerable<BarberService>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Hizmetlerim</h1>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hizmet Adı</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Id</td>
                    <td>@service.Operation.Name</td>
                    <td>@service.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-success btn-sm">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline" onsubmit="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Create" class="btn btn-success">Yeni Hizmet Ekle</a>