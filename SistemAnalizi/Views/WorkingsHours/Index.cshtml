@using EntityLayer
@model IEnumerable<WorkingHours>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Gün</th>
                <th>Açılış Saati</th>
                <th>Kapanış Saati</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workingHour in Model)
            {
                <tr>
                    <td>@workingHour.Id</td>
                   @*  <td>@workingHour.BarberShop.Name</td> <!-- Berber dükkanının adını göster --> *@
                    <td>@workingHour.Day</td>
                    <td>@workingHour.OpenTime.ToString("hh\\:mm")</td> <!-- Açılış saatini göster -->
                    <td>@workingHour.CloseTime.ToString("hh\\:mm")</td> <!-- Kapanış saatini göster -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@workingHour.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@workingHour.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Yeni Çalışma Saati Ekle</a> <!-- Ekle butonu -->
</div>
<!-- Bootstrap ve jQuery dahil edilmelidir -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>