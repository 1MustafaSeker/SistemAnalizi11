@using EntityLayer
@model IEnumerable<WorkingHours>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-4">
    <h2>Çalışma Saatlerim</h2>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Yeni Çalışma Saati Ekle</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Gün</th>
                <th>Açılış Saati</th>
                <th>Kapanış Saati</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workingHour in Model)
            {
                <tr>
                    <td>@workingHour.Id</td>
                    <td>@DayOfWeekHelper.GetDayName((int)workingHour.Day)</td>
                    <td>@workingHour.OpenTime</td>
                    <td>@workingHour.CloseTime</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@workingHour.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@workingHour.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>